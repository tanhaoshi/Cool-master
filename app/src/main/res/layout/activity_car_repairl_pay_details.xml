<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_pay_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mvp.cool.master.mvp.ui.activity.PayDetailsActivity">

    <include layout="@layout/base_toolbar"/>

    <include layout="@layout/line_onedimens"/>

    <mvp.cool.master.layout.RecyclerScrollView
        android:id="@+id/scrollView_id"
        android:background="@null"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/carrepailrdetail"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:text="腾飞维修"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:text="腾飞维修集团"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:text="-500.00点"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="付款方式:"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="恒通油卡"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <include layout="@layout/line_onedimens"/>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="订单说明:"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="更换轮胎"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <include layout="@layout/line_onedimens"/>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="买家:"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="182****5779"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <include layout="@layout/line_onedimens"/>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="支付时间:"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="2017-04-12 16:22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <include layout="@layout/line_onedimens"/>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="订单号:"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="201704120010001150225529198"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <include layout="@layout/line_onedimens"/>

            <Button
                android:id="@+id/finshPay"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="26dp"
                android:text="确定"
                android:background="@color/yellow"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

        </LinearLayout>
    </mvp.cool.master.layout.RecyclerScrollView>
</LinearLayout>
