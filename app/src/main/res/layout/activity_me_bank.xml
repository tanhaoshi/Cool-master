<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_me_bank"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="mvp.cool.master.mvp.ui.activity.MeBankActivity">

    <include layout="@layout/base_toolbar"/>

    <include layout="@layout/line_onedimens"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bankeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/addBank"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <include layout="@layout/line_onedimens"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="16dp"
                android:textSize="15sp"
                android:textColor="@color/black_transparent"
                android:text="添加银行卡"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/ic_triangle"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>

        <include layout="@layout/line_onedimens"/>

    </LinearLayout>

</LinearLayout>
