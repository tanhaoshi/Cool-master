<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/oizlImage"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_width="65dp"
            android:layout_height="65dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/oizlTitle"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:textSize="14sp"
                    android:text="上海慧翔"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/oizlPhone"
                    android:drawableTop="@drawable/oizlmobile"
                    android:text="021-65043831"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <include layout="@layout/line_onedimens"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/repairlCar"
                    android:text="小汽车"
                    android:drawablePadding="6dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginLeft="6dp"
                    android:drawableRight="@drawable/repaircar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_toEndOf="@+id/repairlCar"
                    android:layout_centerVertical="true"
                    android:id="@+id/repairlDaCar"
                    android:text="大卡车"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:drawablePadding="6dp"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/repairdaka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/textMoney"
                    android:text="￥500起"
                    android:textSize="16sp"
                    android:textColor="@color/yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <include layout="@layout/line_onedimens"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/oizlAddares"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:text="上海市"
        android:drawableLeft="@drawable/dingwei"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>