<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="38dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/title"
                    android:text="上海慧翔"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:id="@+id/money"
                    android:textSize="15sp"
                    android:text="￥500"
                    android:textColor="@color/yellow"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <include layout="@layout/line_onedimens"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/repairlCar"
                    android:text="小汽车"
                    android:drawablePadding="6dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/repaircar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_toEndOf="@+id/repairlCar"
                    android:layout_centerVertical="true"
                    android:id="@+id/repairlDaCar"
                    android:text="大卡车"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:drawablePadding="6dp"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@drawable/repairdaka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageMobile"
                    android:src="@drawable/oizlmobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <include layout="@layout/line_onedimens"/>

        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/oizlAddares"
            android:textColor="@color/black"
            android:layout_marginLeft="12dp"
            android:text="上海市"
            android:drawableLeft="@drawable/dingwei"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/line_onedimens"/>

</LinearLayout>