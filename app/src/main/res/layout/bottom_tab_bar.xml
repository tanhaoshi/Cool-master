<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bg_color">
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:checkedButton="@+id/rbShop">
        <RadioButton
            android:id="@+id/rbHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="分类"
            android:textSize="12sp"
            android:textColor="@color/tab_text_color"
            android:drawableTop="@drawable/btn_tabbar_home_selector"/>
        <RadioButton
            android:id="@+id/rbLive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="收藏"
            android:textSize="12sp"
            android:textColor="@color/tab_text_color"
            android:drawableTop="@drawable/btn_tabbar_zhibo_selector"/>
        <RadioButton
            android:id="@+id/rbShop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="商城"
            android:textColor="@color/tab_text_color"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/btn_tabbar_shop_selector"/>
        <RadioButton
            android:id="@+id/rbFollw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="购物车"
            android:textSize="12sp"
            android:textColor="@color/tab_text_color"
            android:drawableTop="@drawable/btn_tabbar_guanzhu_selector"/>
        <RadioButton
            android:id="@+id/rbMe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="订单"
            android:textSize="12sp"
            android:textColor="@color/tab_text_color"
            android:drawableTop="@drawable/btn_tabbar_wode_selector"/>
    </RadioGroup>

</LinearLayout>