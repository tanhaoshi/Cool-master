<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/base_toolbar"/>

    <include layout="@layout/line_onedimens"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bound_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_safety_center"
            android:text="@string/safety_phone"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="0.3dp"
            android:layout_height="@dimen/activity_safety_center"
            android:background="@color/black_transparent"/>

        <TextView
            android:id="@+id/au_autonym"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_safety_center"
            android:text="@string/safety_approve"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <include layout="@layout/line_onedimens"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textColor="@color/autocommit_base"
        android:text="@string/autonu_commit"/>

    <include layout="@layout/line_onedimens"/>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_safety_textsize"
            android:text="真实姓名:"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/black_transparent"
        />

        <mvp.cool.master.layout.EdiTextClean
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:maxLength="11"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:textColorHint="#9b9b9b"
            android:background="@drawable/safety_activty_phone_selector"
            android:drawableRight="@drawable/ic_edit_input_clear"
            android:id="@+id/ediTextClean"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_safety_textsize"
            android:gravity="center"
            android:textSize="@dimen/activity_safety_textsize"
            android:textColor="@color/black_transparent"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:text="请填写你的真实姓名，方便保障合法权益"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_safety_textsize"
            android:text="手机号码:"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/black_transparent"
        />

        <mvp.cool.master.layout.EdiTextClean
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:maxLength="11"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:textColorHint="#9b9b9b"
            android:background="@drawable/safety_activty_phone_selector"
            android:drawableRight="@drawable/ic_edit_input_clear"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="证件所在地:"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/black_transparent"
        />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="46dp">

        <mvp.cool.master.layout.EdiTextClean
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:maxLength="11"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="4dp"
            android:textColorHint="#9b9b9b"
            android:background="@drawable/safety_activty_phone_selector"
            android:drawableRight="@drawable/ic_edit_input_clear"
        />
         <Button
             android:background="@drawable/unflod"
             android:layout_width="30dp"
             android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_safety_textsize"
            android:text="证件类型:"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black_transparent"
        />

        <CheckBox
            android:text="二代身份证"
            android:textSize="14sp"
            android:layout_width="110dp"
            android:layout_height="30dp"/>

        <CheckBox
            android:text="临时身份证"
            android:layout_width="110dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_safety_textsize"
            android:text="身份证号:"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/black_transparent"
        />

        <mvp.cool.master.layout.EdiTextClean
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:maxLength="18"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:textColorHint="#9b9b9b"
            android:background="@drawable/safety_activty_phone_selector"
            android:drawableRight="@drawable/ic_edit_input_clear"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="45dp"
    >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_safety_textsize"
            android:text="正面:"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/black_transparent"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击上传"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="45dp"
    >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_safety_textsize"
            android:text="反面:"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/black_transparent"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击上传"
        />
    </LinearLayout>

    <Button
        android:id="@+id/autonu_finsh"
        android:text="确认提交"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>

</LinearLayout>