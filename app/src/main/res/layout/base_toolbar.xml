<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimarys"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    >

    <ImageView
        android:id="@+id/base_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/ic_title_back_white"
        android:visibility="gone" />


    <TextView
        android:id="@+id/base_tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/base_toolbar_textsize"
        tools:text="标题" />

    <TextView
        android:id="@+id/base_tv_toolbar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="确定"
        android:visibility="gone" />


</android.support.v7.widget.Toolbar>