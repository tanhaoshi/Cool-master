<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_near_by_oizl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mvp.cool.master.mvp.ui.activity.NearByOizlActivity">

    <include layout="@layout/base_toolbar"/>

    <include layout="@layout/line_onedimens"/>

   <FrameLayout
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp">


       <com.amap.api.maps.MapView
           android:id="@+id/map"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="10dp"
          >
           <RelativeLayout
               android:layout_centerHorizontal="true"
               android:id="@+id/list_relati"
               android:layout_width="30dp"
               android:layout_height="35dp"
               android:layout_marginTop="5dp"
               android:background="@color/white"
               android:layout_alignParentRight="true">

               <ImageView
                   android:id="@+id/list_shehui"
                   android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="3dp"
                   android:background="@color/flag_green"
               />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="合作"
                   android:textSize="11sp"
                   android:textColor="@color/black"
                   android:layout_below="@id/list_shehui"
                   android:layout_centerHorizontal="true"
               />
           </RelativeLayout>

           <RelativeLayout
               android:layout_centerHorizontal="true"
               android:layout_width="30dp"
               android:layout_height="35dp"
               android:layout_below="@id/list_relati"
               android:background="@color/white"
               android:layout_alignParentRight="true">

               <ImageView
                   android:id="@+id/list_hezuo"
                   android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:layout_marginTop="5dp"
                   android:background="@color/red"
                   android:layout_centerHorizontal="true"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="社会"
                   android:textSize="11sp"
                   android:textColor="@color/black"
                   android:layout_below="@id/list_hezuo"
                   android:layout_centerHorizontal="true"
               />
           </RelativeLayout>
       </RelativeLayout>

   </FrameLayout>

</LinearLayout>
