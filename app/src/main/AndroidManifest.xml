        <activity android:name=".mvp.ui.activity.OneSweepActivity"
                  android:theme="@style/CommonViewStyle"
                  android:launchMode="singleTask">
        </activity>

        <service android:name=".service.DownLoadService"/>
    </application>

</manifest>